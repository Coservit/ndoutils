# Source code directories
SRC_BASE=./src/
SRC_INCLUDE=./include/

INSTALL=@INSTALL@
INSTALL_OPTS=@INSTALL_OPTS@
INIT_DIR=@init_dir@
INIT_OPTS=-o root -g root

all:
	cd $(SRC_BASE) && $(MAKE)

install-init: 
	$(INSTALL) -m 755 $(INIT_OPTS) -d $(DESTDIR)$(INIT_DIR)
	$(INSTALL) -m 755 $(INIT_OPTS) daemon-init $(DESTDIR)$(INIT_DIR)/ndo2db


clean:
	cd $(SRC_BASE) && $(MAKE) $@
	rm -f core
	rm -f *~ */*~ include/nagios-*/*~

distclean: clean
	cd $(SRC_BASE) && $(MAKE) $@
	rm -f config.log config.status config.cache $(SRC_INCLUDE)/config.h
	rm -f Makefile
	rm -f subst daemon-init

devclean: distclean

